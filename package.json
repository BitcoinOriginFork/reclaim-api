{
  "name": "btco-reclaim-api",
  "version": "1.0.0",
  "description": "Verify Reclaim messages and submit to claim contract",
  "main": "js/index.js",
  "scripts": {
    "test": "npm run compile && mocha --exit dist/**/*.spec.js",
    "compile": "rm -rf dist/* && tsc --sourcemap -p ./",
    "start": "npm run compile && pm2 start pm2.json && pm2 logs",
    "stop": "pm2 stop express",
    "watch": "tsc --sourcemap --watch -p ./",
    "migrate-up": "pg-migrate up",
    "migrate-down": "pg-migrate down",
    "migrate-create": "pg-migrate create",
    "migrate-unlock": "pg-migrate unlock"
  },
  "author": "Sam Jeston",
  "license": "ISC",
  "dependencies": {
    "@types/bitcoinjs-lib": "^3.3.3",
    "@types/lodash": "^4.14.108",
    "bitcoinjs-lib": "^3.3.2",
    "bitcoinjs-message": "2.0.0",
    "body-parser": "1.17.2",
    "cors": "2.8.4",
    "ethereumjs-util": "5.1.5",
    "express": "4.15.3",
    "helmet": "3.8.1",
    "litecore-message": "1.0.5",
    "lodash": "^4.17.10",
    "node-pg-migrate": "2.7.0",
    "pg": "7.1.0",
    "pm2": "2.6.1",
    "typescript": "2.7.2",
    "validator": "8.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/express": "4.0.36",
    "@types/mocha": "2.2.48",
    "@types/pg": "6.1.43",
    "chai": "4.1.2",
    "mocha": "5.0.4"
  }
}
